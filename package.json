{
    "name": "@thematters/contracts",
    "version": "0.0.1",
    "description": "Solidity contracts for Matters",
    "scripts": {
        "build": "forge build",
        "test": "forge test -vvvv",
        "prettier": "prettier --write 'src/**/*.sol'",
        "prettier:list": "prettier --list-different 'src/**/*.sol'",
        "prettier:check": "prettier --check 'src/**/*.sol'",
        "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
        "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
        "lint": "npm run prettier && npm run solhint",
        "lint:check": "npm run prettier:check && npm run solhint:check",
        "gen:doc": "solidity-docgen -i src/contracts -t docs --solc-module solc-0.8"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thematters/contracts.git"
    },
    "keywords": [
        "solidity",
        "contract"
    ],
    "author": "Matters Lab",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/thematters/contracts/issues"
    },
    "homepage": "https://github.com/thematters/contracts#readme",
    "devDependencies": {
        "@openzeppelin/contracts": "^4.4.2",
        "prettier": "^2.5.1",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solc-0.8": "npm:solc@^0.8.11",
        "solhint": "^3.3.6",
        "solidity-docgen": "^0.5.16"
    }
}
